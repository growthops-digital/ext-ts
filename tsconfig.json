{
	"compilerOptions": {
		"declaration": true,
		"strictNullChecks": true,
		"target": "es5",
		"outDir": "./dist",
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es6",
			"es2017.object"
		],
		"rootDir": "src",
		"skipLibCheck": true,
	},
	"include": [
		"src",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.json",
		"**/.*.js",
		"**/*.js",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
